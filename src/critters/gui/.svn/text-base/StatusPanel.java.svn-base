public class StatusPanel extends javax.swing.JPanel {
    
    private ArrayList<CritterState> critters;
    /** Creates new form StatusPanel */
    public StatusPanel() {
        initComponents();
        critters = new ArrayList<CritterState>();
    }
    
    
    public void addCritter(Class<? extends Critter>critterType, int population, int totalPopulation)
    {
        CritterState cs = new CritterState(critterType, population, totalPopulation);
        critters.add(cs);          
        add(cs);
    }
    
    public void clear()
    {
    	critters.clear();
    	removeAll();
    }
    
    public void update(CritterModel theModel)
    {
        for(CritterState cs : critters)
        {
            int pop = theModel.getPopulationCounters().get(cs.getType()).intValue();
            cs.update(pop, theModel.getPopulation());
        }
    }
    
